<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".orgYourAdvertisement">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="299dp"
            android:layout_height="79dp"
            android:layout_marginTop="28dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDeleteAdvertise1.2"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <Button
            android:id="@+id/btnDeleteAdvertise1.3"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:background="#225EBB"
            android:fontFamily="@font/trykker"
            android:text="@string/btnDelete"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@id/btnUpdateAdvertise1.3"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <Button
            android:id="@+id/btnUpdateAdvertise1.3"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:background="#225EBB"
            android:fontFamily="@font/trykker"
            android:text="@string/btnUpdate"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:text="@string/inputDemo3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="299dp"
            android:layout_height="79dp"
            android:layout_marginTop="28dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDeleteAdvertise1.1"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <Button
            android:id="@+id/btnDeleteAdvertise1.2"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:background="#225EBB"
            android:fontFamily="@font/trykker"
            android:text="@string/btnDelete"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@id/btnUpdateAdvertise1.2"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <Button
            android:id="@+id/btnUpdateAdvertise1.2"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:background="#225EBB"
            android:fontFamily="@font/trykker"
            android:text="@string/btnUpdate"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:text="@string/inputDemo3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="311dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/trykker"
            android:text="@string/adminYourAdvert"
            android:textColor="#143567"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="299dp"
            android:layout_height="79dp"
            android:layout_marginTop="33dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:text="@string/inputDemo3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/btnDeleteAdvertise1.1"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:background="#225EBB"
            android:fontFamily="@font/trykker"
            android:text="@string/btnDelete"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@id/btnUpdateAdvertise1.1"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <Button
            android:id="@+id/btnUpdateAdvertise1.1"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:background="#225EBB"
            android:fontFamily="@font/trykker"
            android:text="@string/btnUpdate"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="11dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fltBtnAddAdvertise1" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fltBtnAddAdvertise1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:clickable="true"
            app:backgroundTint="#225EBB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnUpdateAdvertise1.3"
            app:srcCompat="@drawable/ic_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>