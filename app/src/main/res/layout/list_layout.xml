<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/image"
        android:text="Wash Me"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cAddress2"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_name"
        android:layout_marginStart="74dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/image"
        android:text="kandy" />

    <TextView
        android:id="@+id/cRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/cAddress2"
        android:text="Best Rated"
        android:textColor="#3D8E40" />

    <TextView
        android:id="@+id/cRate"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cRating"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/cAddress2"
        android:text="4.5"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
